{
  "compilerOptions": {
    /* File structure */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Language features */
    "target": "ES2020",                 // Modern JS
    "module": "CommonJS",               // Compatible with Node.js ecosystem
    "moduleResolution": "node",         // Resolve `node_modules` correctly

    /* Enable modern import syntax */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* TypeScript strictness (safe defaults) */
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    /* Source maps and declarations (optional, for debugging or library output) */
    "sourceMap": true,
    "declaration": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
